#include<stdio.h>
#include<math.h>

int main()
{
    int digit=0, number, sum=0;
    printf("Enter the number: \n");
    scanf("%d",&number);

    while (number > 0)
    {
        number = number / 10
        digit = number % 10;
        sum = sum + digit;
    }
    printf("The sum of the digits of %d is %d\n",number,sum);
    return 0;

}
